#!/usr/bin/env sh

cargo test || exit 1
cargo build

STATS=./target/debug/stats

title() {
  local str="$@"
  printf "\033[32m>\033[37m $str\033[0m\n"
}

stats() {
  title stats "$@"
  eval $STATS $@
}

stats binom 10 0.2 4

stats nbinom 2 0.2 4

stats geom 0.2 4

stats pois 4.2 4

stats unif 1.9 4.1 2.5

stats unif 1.9 4.1 2.5 2.6

stats exp 1.9 2.5 2.6

stats exp 1.9 2.5

stats exp 1.9

exit 0
